<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/img_photo_cart"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/hinh1"></ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5">

            <TextView
                android:id="@+id/tv_name_product_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:text="SD Gundam"
                android:textColor="@color/black"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/tv_price_product_cart"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/tv_name_product_cart"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="400.00 VND"
                android:textColor="@color/black"
                android:textSize="20dp"></TextView>

            <ImageView
                android:id="@+id/img_minus_cart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/tv_price_product_cart"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_baseline_remove_24"
                app:tint="#B3B1B1"></ImageView>

            <TextView
                android:id="@+id/tv_count_cart"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_price_product_cart"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="18dp"
                android:layout_toRightOf="@+id/img_minus_cart"
                android:background="@color/white"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/img_plus_cart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/tv_price_product_cart"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_toRightOf="@+id/tv_count_cart"
                android:src="@drawable/ic_baseline_add_24"
                app:tint="#B3B1B1"></ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#FB8406">

            <ImageView
                android:id="@+id/img_remove_cart"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:src="@drawable/ic_baseline_delete_24"
                app:tint="@color/white"></ImageView>


        </RelativeLayout>



    </LinearLayout>


</androidx.cardview.widget.CardView>